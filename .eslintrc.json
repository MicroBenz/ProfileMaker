{
  "extends": "airbnb",
  "plugins": [
    "import"
  ],
  "parser": "babel-eslint",
  "rules": {
    "brace-style": [
      "error",
      "stroustrup"
    ],
    "no-underscore-dangle": [
      "error",
      {
        "allow": ["_id"]
      }
    ],
    "global-require": [0]
  },
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "FB": true
  }
}
